@model ShampanERP.Models.LoginResource

@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - GDIC</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="~/css/fonts.googleapis.com_css_family=Source+Sans.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminLte/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/AdminLte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/AdminLte/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: red;
    }

    .card-header{
        background-color: ghostwhite;
        /*background-color: ghostwhite;*/
        /*color:white;*/
        padding: 22px;
    }

    .login-card-body{
        background-color: whitesmoke;
        /*background-color: #5dbb63;*/
    }

    .login-page{
        background-color: #ccffee;
        /*background-color: #03c04a;*/
    }
    /* Hide the default arrow */
    select {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        background-image: none; /* Remove the default arrow icon */
        background-color: #fff; /* Set the background color */
        padding: 5px 10px; /* Adjust padding as needed */
        border: 1px solid #ccc; /* Add border for styling */
        cursor: not-allowed; /* Show cursor as not allowed to indicate disabled */
    }

    /* Optional: Style the disabled state */
    select:disabled {
        opacity: 0.7; /* Adjust opacity for a disabled look */
    }

    .inline-link {
        display: inline-block;    
    }

</style>

<body class="hold-transition login-page">
    <div class="login-box">
        @Html.HiddenFor(model => model.returnUrl)

        <!-- /.login-logo -->
        <div class="card">
            <div class="card-header text-center">      
                
                <img src="~/images/gdic.png" />
                @*<a href="https://www.symphonysofttech.com/" target="_blank" class="h1"><b>GDIC </b>Audit</a>*@

            </div>

            <div class="card-body login-card-body">
                @*<p class="login-box-msg">Sign in to start your session</p>*@
                <div style="margin-left:65px;padding-bottom:6px;">
                    @*margin-left: 65px;
                    padding-bottom: 13px;*@
                    <a href="https://www.symphonysofttech.com/" target="_blank" class="h1"><b>GDIC </b>Audit</a>
                </div>

                @using (Html.BeginForm("Index", "Login", new { }, FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.returnUrl)

                    

                    <div class="input-group mb-3">

                        @*@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "User Name " })*@
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Email ID" })
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-envelope"></i> </span>
                        </div>

                    </div>
                    <div class="input-group mb-3">
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", @placeholder = "Password " })
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>

                    </div>
                    <div class="input-group mb-3">
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="input-group mb-3">

                        <select id="CompanyName" name="CompanyName" class="form-control" readonly="readonly" onclick="return false;">
                            @foreach (var item in Model.CompanyInfos)
                            {
                                <option value="@item.CompanyDataBase">@item.CompanyName</option>

                            }
                        </select>

                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>

                    </div>

                    @Html.ValidationMessageFor(model => model.Message)

                    <div class="row">

                        <div class="col-4">
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                     
                    </div>

                    <div class="row">

                        @*<div class="col-3">
                        </div>*@

                        <!-- /.col -->
                        <div class="col-12 mt-2 text-center">

                            <div class="inline-link" style="background-color: skyblue; border-radius: 20px; padding: 4px 15px;">
                                <a style="margin-right:8px;" href="/ForgetPassword/index">Forgot Password</a>/<a style="margin-left:8px;" href="/ForgetPassword/index">Request For Password</a>
                            </div>

                           @* <a href="/ForgetPassword/index">Forgot Password</a>
                            <a href="/ForgetPassword/index">Request For Password</a>*@

                        </div>
                        <!-- /.col -->

                    </div>
                }

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

    <!-- /.login-box -->
    <!-- jQuery -->


    <script src="/AdminLte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/AdminLte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/AdminLte/dist/js/adminlte.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>




</body>
</html>






